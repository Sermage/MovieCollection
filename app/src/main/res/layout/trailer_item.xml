<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_margin="8dp"
        android:background="@color/background_darkGrey"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_weight="4"
        android:background="@drawable/round_outline"
        android:contentDescription="@string/play_trailer_of_movie"
        android:outlineProvider="background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNameOfTrailer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPlay"
        tools:text="Official Trailer" />


    </LinearLayout>

