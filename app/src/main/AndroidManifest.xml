<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sermage.mymoviecollection">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sermage.mymoviecollection.screens.search.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="@android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="com.sermage.mymoviecollection.screens.favorites.FavoritesActivity"
            android:label="@string/Favorites_activity_label"
            android:parentActivityName="com.sermage.mymoviecollection.screens.main.MainActivity" />
        <activity android:name="com.sermage.mymoviecollection.screens.movieDetails.MovieDetailsActivity" />
        <activity android:name="com.sermage.mymoviecollection.screens.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>